<!DOCTYPE html>
<html lang="En">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>FlowersApplication</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/df0ce42e04.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script&family=Montserrat:wght@300;700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="../dist/css/main.min.css">
</head>

<body>

    <!-- MAIN MENU -->
    <div class="main-view">
        <header>
            <h1><i class="fas fa-seedling icon"></i>FlowersApplication<i class="fas fa-tree icon"></i></h1>
        </header>

        <div class="question">
            <p class="active-acc">Who's use?</p>
            <p class="alert-info">No add any accounts</p>
        </div>


        <section>
            <p class="alert-info">Lorem ipsum dolor sit amet consectetur adipisicing elit. Maxime alias id deserunt
                nesciunt
                recusandae est expedita perspiciatis ex suscipit maiores repellat, corporis architecto voluptatem vitae,
                totam autem rerum atque quia?</p>
        </section>


        <div class="btns-main-window">
            <button class="btn btn-login" disabled><i class="fas fa-door-open"></i>Login</button>
            <button class="btn btn-add"><i class="fas fa-user-plus"></i></i>Add account</button>
            <button class="btn btn-delete" disabled><i class="fas fa-user-minus"></i></i>Delete account</button>
            <button class="btn btn-all-delete"><i class="fas fa-users-slash"></i>Delete all accounts</button>
        </div>
    </div>


    <!-- LOGIN PANEL -->
    <div class="login-view-shadow">
        <form id="loginForm" autocomplete="off">
            <div class="login-view">
                <div class="form-login-box">
                    <label for="password3" autocomplete="off">Password:</label>
                    <input type="password" id="password3" autocomplete="off" placeholder="Put password">
                    <p class="alert-login-view"></p>
                    <div class="btn-login-view">
                        <button class="open-login"><i class="fas fa-book-open"></i> Open</button>
                        <button class="cancel-login"><i class="fas fa-window-close"></i> Cancel</button>
                    </div>
                </div>
            </div>
        </form>
    </div>


    <!-- FORM WITH ADD NEW ACCOUNT  -->
    <form id="newAccountForm" autocomplete="off">
        <div class="add-new-account">
            <h2 class="title">Add new account</h2>
            <div class="form-box">
                <label for="username">Name:</label>
                <input type="text" id="username" placeholder="Put your name" maxlength="10">
                <p class="alert-add-account"></p>
            </div>
            <div class="form-box">
                <label for="password1" autocomplete="off">Password:</label>
                <input type="password" id="password1" autocomplete="off" placeholder="Put password">
                <p class="pass1-text"></p>
            </div>
            <div class="form-box">
                <label for="password2" autocomplete="off">Repeat password:</label>
                <input type="password" id="password2" autocomplete="off" placeholder="Repeat password">
                <p class="pass2-text"></p>
            </div>
            <div class="form-box">
                <label for="avatar">Check your avatar</label>
                <input type="file" id="avatar" accept="image/x-png,image/gif,image/jpeg" class="choose-file" />
                <div class="forward-delete-avatar">
                    <button type="submit" class="forward-avatar"><i class="fas fa-share"></i>Submit</button>
                    <button type="button" class="delete-forward-avatar"><i class="fas fa-trash"></i>Remove</button>
                </div>
                <div class="defaults-avatars">
                    <div class="avatarDefault one-avatar"></div>
                    <div class="avatarDefault two-avatar"></div>
                    <div class="avatarDefault three-avatar"></div>
                    <div class="avatarDefault four-avatar"></div>
                    <div class="avatarDefault five-avatar"></div>
                </div>
                <!-- <p class="error-text">error</p> -->
            </div>
            <div class="btns-add-Window">
                <button class="save"><i class="fas fa-save"></i> Save</button>
                <button class="cancel"><i class="fas fa-window-close"></i> Cancel</button>
            </div>
        </div>
    </form>
    <script src="../dist/js/main.min.js"></script>

</body>

</html>